# ============================================================================
# EjLog WMS v1.0.0 - Configurazione Ambiente Produzione
# ============================================================================

# Ambiente
NODE_ENV=production

# Porte Server
PORT_HTTPS=7079
PORT_SQL=7077
PORT_REACT=8080
PORT_FRONTEND=3000

# Database SQL Server
DB_SERVER=localhost\SQL2019
DB_NAME=promag
DB_USER=sa
DB_PASSWORD=CHANGE_THIS_PASSWORD
DB_ENCRYPT=false
DB_TRUST_CERT=true

# JWT Secret (CAMBIA QUESTO IN PRODUZIONE!)
JWT_SECRET=your-super-secret-jwt-key-change-this-immediately-in-production

# CORS
CORS_ORIGIN=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ejlog-wms.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Session
SESSION_SECRET=your-super-secret-session-key-change-this-too

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# Email (opzionale)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@ejlog-wms.com

# Backup
BACKUP_ENABLED=true
BACKUP_DIR=backups
BACKUP_RETENTION_DAYS=30

# Performance
ENABLE_CACHE=true
CACHE_TTL=3600

# Security
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
ENABLE_HELMET=true
ENABLE_COMPRESSION=true

# SSL/HTTPS (opzionale)
ENABLE_HTTPS=false
SSL_CERT_PATH=./config/ssl/server.crt
SSL_KEY_PATH=./config/ssl/server.key

# Scheduler
SCHEDULER_ENABLED=true
SCHEDULER_INTERVAL=5000
SCHEDULER_WORKERS=3

# WebSocket
WS_ENABLED=true
WS_HEARTBEAT_INTERVAL=30000

# API
API_PREFIX=/api
API_VERSION=v1
API_TIMEOUT=30000

# Feature Flags
ENABLE_WAREHOUSE_MANAGEMENT=true
ENABLE_PTL_SYSTEM=true
ENABLE_VOICE_PICK=true
ENABLE_BARCODE_SCANNER=true
ENABLE_ANALYTICS=true

# Debug (solo per troubleshooting)
DEBUG_MODE=false
VERBOSE_LOGGING=false
